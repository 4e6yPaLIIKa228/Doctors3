        <Label Content="Фамилия" HorizontalAlignment="Left" Height="34" Margin="669,97,0,0" VerticalAlignment="Top" Width="80" FontSize="14"/>
        <Button x:Name="BtBack" Content="Назад" HorizontalAlignment="Left" Height="50" Margin="24,346,0,0" VerticalAlignment="Top" Width="125" Click="BtBack_Click"/>
        <Button x:Name="BtPoisk" Content="Поиск" HorizontalAlignment="Left" Height="50" Margin="624,346,0,0" VerticalAlignment="Top" Width="125" Click="BtPoisk_Click"/>
        <ComboBox x:Name="CB1" HorizontalAlignment="Left" Margin="45,217,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CB2" HorizontalAlignment="Left" Margin="315,217,0,0" VerticalAlignment="Top" Width="120"/>
